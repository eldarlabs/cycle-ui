{
	"compilerOptions": {
	  "declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": false,
		"outDir": "lib",
		"sourceMap": true,
		"removeComments": false,
		"target": "es5"
	},
	"compileOnSave": false,
	"exclude": [
		"typings/browser.d.ts",
    "typings/browser",
		"node_modules",
		"lib"
	]
}
